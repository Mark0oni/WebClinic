@using Microsoft.AspNetCore.Identity
@using WebClinic.Data.Models
@inject SignInManager<User> signInManager

@if (signInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Админ"))
    {

        <li class="nav-item">
            <a class="nav-link" asp-controller="Service" asp-action="Index">Услуги</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-controller="User" asp-action="Index">Пользователи</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-controller="Doctor" asp-action="Index">Врачи</a>
        </li>
    }

    else if (User.IsInRole("Доктор"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Service" asp-action="Index">Мои услуги</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-controller="Schedule" asp-action="Index">Мой график</a>
        </li>
    }

    else if (User.IsInRole("Пациент"))
    {
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Patient" asp-action="Index">Записаться на прием</a>
        </li>
    }

    else if (User.IsInRole("Гость"))
    {
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Patient" asp-action="Create">Оформить профиль пациента</a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Logout">Выйти</a>
    </li>
}

else
{

    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Войти</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
    </li>
}

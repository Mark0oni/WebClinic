@model IEnumerable<WebClinic.Data.Models.Notification>

@if (Model.Any())
{
    @foreach (var notification in Model)
    {
        <li class="dropdown-item">
            <span>@notification.Message</span>
            <small class="text-muted">@notification.CreatedAt.ToShortDateString()</small>
        </li>
    }
}
else
{
    <li class="dropdown-item text-center">
        Нет новых уведомлений
    </li>
}

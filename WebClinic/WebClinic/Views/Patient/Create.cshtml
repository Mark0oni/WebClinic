@model WebClinic.Data.ViewModels.Patient.CreatePatientViewModel;

@{
    ViewData["Title"] = "Профиль пациента";
    ViewData["HideGreeting"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="form-container">

    <h2 class="form-title">Оформление профиля пациента</h2>

    <div class="form-box">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" type="number" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" type="number" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div class="form-btn">
                <button type="submit" class="btn btn-primary">Оформить</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Отмена</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
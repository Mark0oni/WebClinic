@model IEnumerable<WebClinic.Data.ViewModels.User.UserViewModel>

@{
    ViewData["Title"] = "Список пользователи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="table-container">

    <h2 class="table-title">@ViewData["Title"]</h2>

    <div class="table-box">

        <div class="table-btn-create">
            <p>Вы хотите добавить пользователя?</p>
            <a href="@Url.Action("Create", "User")" class="btn btn-primary">Добавить пользователя</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Почта</th>
                    <th>Роль</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.MiddleName</td>
                        <td>@user.Email</td>
                        <td>@user.Roles</td>
                        <td>
                            <div class="table-btn">
                                <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-primary btn-secondary">Редактировать</a>
                                <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-primary btn-secondary" onclick="return confirm('Вы уверены, что хотите удалить этого пользователя?');">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
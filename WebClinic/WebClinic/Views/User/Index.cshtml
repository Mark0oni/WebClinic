@model IEnumerable<WebClinic.Data.ViewModels.User.UserViewModel>

@{
    ViewData["Title"] = "Список пользователей";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "User")" class="btn btn-primary">Создать нового пользователя</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Почта</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.LastName</td>
                <td>@user.FirstName</td>
                <td>@user.MiddleName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Details", "User", new { id = user.Email })" class="btn btn-info btn-sm">Просмотр</a>
                    <a href="@Url.Action("Edit", "User", new { id = user.Email })" class="btn btn-warning btn-sm">Редактировать</a>
                    <a href="@Url.Action("Delete", "User", new { id = user.Email })" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

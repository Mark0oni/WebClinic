@model IEnumerable<WebClinic.Data.ViewModels.Doctor.DoctorViewModel>

@{
    ViewData["Title"] = "Список врачей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">

    <h2 class="table-title">@ViewData["Title"]</h2>

    <div class="table-box">

        <div class="table-btn-create">
            <p>Вы хотите добавить врача?</p>
            <a href="@Url.Action("Create", "Doctor")" class="btn btn-primary">Добавить врача</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Почта</th>
                    <th>Должность</th>
                    <th>Стаж</th>
                    <th>Зарплата</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.LastName</td>
                        <td>@doctor.FirstName</td>
                        <td>@doctor.MiddleName</td>
                        <td>@doctor.Email</td>
                        <td>@doctor.PostName</td>
                        <td>@doctor.Experience лет</td>
                        <td>@doctor.Salary</td>
                        <td>
                            <div class="table-btn">
                                <a href="@Url.Action("Edit", "Doctor", new { id = doctor.Id })" class="btn btn-primary btn-secondary">Редактировать</a>
                                <a href="@Url.Action("Delete", "Doctor", new { id = doctor.Id })" class="btn btn-primary btn-secondary" onclick="return confirm('Вы уверены, что хотите удалить этого врача?');">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model IEnumerable<WebClinic.Data.ViewModels.DoctorService.ServiceViewModel>

@{
    ViewData["Title"] = "Список услуг";
    ViewData["HideGreeting"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="table-container">

    <h2 class="table-title">@ViewData["Title"]</h2>

    <div class="table-box">

        <div class="table-btn-create">
            <p>Вы хотите добавить услугу?</p>
            <a href="@Url.Action("Create", "DoctorService")" class="btn btn-primary">Добавить услугу</a>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Наименование</th>
                    <th>Описание</th>
                    <th>Кабинет</th>
                    <th>Стоимость</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.ServiceName</td>
                        <td>@service.Description</td>
                        <td>@service.Cabinet</td>
                        <td>@service.Cost</td>
                        <td>
                            <div class="table-btn">
                                <a href="@Url.Action("Edit", "DoctorService", new { id = service.Id })" class="btn btn-primary btn-secondary">Редактировать</a>
                                <a href="@Url.Action("Delete", "DoctorService", new { id = service.Id })" class="btn btn-primary btn-danger" onclick="return confirm('Вы уверены, что хотите удалить услугу?');">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>